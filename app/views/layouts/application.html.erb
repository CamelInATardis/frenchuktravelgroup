<!DOCTYPE html>
<html>
  <head>
    <title>BlogProj</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
      <div class="floater">
        <div class="left">
          <%= link_to image_tag("logo.png"), root_path %>
        </div>
        <div class="right">
          <% if user_signed_in? %>
            <%= link_to "Quitter", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "Enregistrer", new_user_registration_path %>
            <%= link_to "Entrer", new_user_session_path %>
          <% end %>
        </div>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
